{
    "manifest_version": 3,
    "name": "Privacy Policy Summarizer",
    "version": "1.1.0",
    "description": "LLM Summarization on Policy Policies",
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://api.openai.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  